<Page
    x:Class="BSC_Applications.Page.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BSC_Applications.Page"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Orientation="Vertical" Spacing="10">
            <TextBlock Style="{StaticResource TitleTextBlockStyle}">Sound</TextBlock>
            <TextBlock>Toggle Audio Effects</TextBlock>

            <ToggleSwitch x:Name="SoundToggle" Header="Sound" Toggled="Sound_Toggled" />

            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Margin="0 50 0 0">Feedback</TextBlock>

            <Button x:Name="About" Click="About_Click">About</Button>
            <StackPanel Orientation="Vertical">
                <HyperlinkButton NavigateUri="mailto:JaredGHolderRallo@gmail.com">Email US</HyperlinkButton>
                <HyperlinkButton NavigateUri="https://github.com/BitSoftwareCo/BSC-Applications/issues/new?assignees=&amp;labels=bug&amp;template=bug-report.md&amp;title=BUG+-+%5BShort+Description%5D">Issue on Github</HyperlinkButton>
            </StackPanel>

            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Margin="0 50 0 0">Links</TextBlock>
            <StackPanel Orientation="Vertical">
                <HyperlinkButton x:Name="website">Placeholder</HyperlinkButton>
                <HyperlinkButton x:Name="docs">Placeholder</HyperlinkButton>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>